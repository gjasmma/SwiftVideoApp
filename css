@tailwind base;
@tailwind components;
@tailwind utilities;

/* Custom component: video card shadow */
.video-card {
  @apply bg-white shadow-lg rounded-lg overflow-hidden;
}

/* Custom utility: aspect ratio 16/9 */
.aspect-video {
  aspect-ratio: 16 / 9;
}

/* src/styles/tailwind.css */

/* 1. Tailwind Directives */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* 2. Base Layer – Custom Root & Body */
@layer base {
  :root {
    --color-primary: #1D3557;
    --color-secondary: #000000;
    --color-accent: #E63946;
    --color-light: #F8F9FA;
  }

  body {
    @apply bg-light font-sans text-gray-800;
  }
}

/* 3. Components Layer – Reusable UI Blocks */
@layer components {
  /* Header */
  .header {
    @apply bg-primary text-white p-6 flex items-center justify-between;
  }
  .header__title {
    @apply text-2xl font-semibold;
  }
  .header__nav {
    @apply flex space-x-4;
  }
  .header__nav-link {
    @apply text-white hover:underline;
  }

  /* Footer */
  .footer {
    @apply bg-secondary text-white text-center p-4;
  }

  /* Video Card */
  .video-card {
    @apply bg-white shadow-lg rounded-lg overflow-hidden;
  }
  .video-card__thumbnail {
    @apply w-full h-full object-cover;
  }
  .video-card__info {
    @apply p-4;
  }
  .video-card__title {
    @apply text-lg font-semibold text-gray-900;
  }
  .video-card__meta {
    @apply text-sm text-gray-600 mt-1;
  }
  .video-card__actions {
    @apply mt-4 flex items-center justify-between;
  }
  .btn {
    @apply font-medium rounded;
  }
  .btn--play {
    @apply bg-accent text-white px-4 py-2 hover:bg-red-600;
  }
  .video-card__comments {
    @apply text-gray-500;
  }
}

/* 4. Utilities Layer – Helpers & Utilities */
@layer utilities {
  /* Aspect Ratio 16:9 */
  .aspect-video {
    @apply aspect-w-16 aspect-h-9;
  }

  /* Spacing Helpers */
  .m-auto { @apply mx-auto; }
  .max-w-screen-lg { @apply max-w-screen-lg; }

  /* Text Helpers */
  .text-primary { color: var(--color-primary); }
  .text-secondary { color: var(--color-secondary); }
  .text-accent { color: var(--color-accent); }

  /* Background Helpers */
  .bg-primary { background-color: var(--color-primary); }
  .bg-secondary { background-color: var(--color-secondary); }
  .bg-accent { background-color: var(--color-accent); }
  .bg-light { background-color: var(--color-light); }
}
